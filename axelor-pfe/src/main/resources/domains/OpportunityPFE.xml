<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="ModuleRH" package="com.axelor.ModuleRH.db"/>

  <entity name="OpportunityPFE" table="opportunitypfe">

    <many-to-many name="client" title="Client" ref="Client"/>
    <string name="title" title="Titre" max="255"/>
    <string name="prescriber" title="Prescripteur" max="255"/>
    <string name="description" title="Description" max="255"/>
    <integer name="xp" title="Expérience minimum requise"/>
    <many-to-many name="roles" title="Rôles" ref="RolesCandidat"/>
    <many-to-many name="competences" title="Compétences" ref="Competences"/>
    <many-to-many name="businessSectors" title="Secteurs d'Activité"
      ref="BusinessSectors"/>
    <string name="localisation" title="Localisation" max="255"/>
    <integer name="workawayMin" title="Taux de télétravail min (en %)"/>
    <integer name="workawayMax" title="Taux de télétravail max (en %)"/>
    <string name="ADRmax" title="TJM max (€ HT)"/>
    <date name="beginningDate" title="Date de démarrage"/>
    <integer name="workingRate" title="Taux d'occupation (en %)"/>
    <integer name="lengthInit" title="Durée initiale (jours ouvrés)"/>
    <integer name="lengthMax" title="Durée max (jours ouvrés)"/>
    <string name="comments" title="Commentaires" max="255"/>

  </entity>

</domain-models>
