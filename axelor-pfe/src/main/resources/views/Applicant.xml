<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="applicant-grid" title="Candidats" model="com.axelor.ModuleRH.db.Applicant"
    canEdit="true">
    <field name="title"/>
    <field name="name"/>
    <field name="surname"/>
    <field name="mail"/>
    <field name="phone"/>
    <field name="rolesc"/>
    <field name="competences"/>
    <field name="localisation"/>
    <field name="availabilityDate"/>
    <field name="status"/>

  </grid>

  <form name="applicant-form" title="Ajout Candidat" model="com.axelor.ModuleRH.db.Applicant"
    width="large">

    <panel title="Informations Candidat">
      <field name="title" colSpan="1"/>
      <field name="name" colSpan="2"/>
      <field name="surname" colSpan="2"/>
    </panel>

    <panel title="Contact">
      <field name="mail" colSpan="3"/>
      <field name="phone" colSpan="3"/>
    </panel>

    <panel title="Adresse">
      <field name="address.street" readonly="false" colSpan="3"/>
      <field name="address.city" readonly="false" colSpan="3"/>
      <field name="address.zipcode" readonly="false" colSpan="2"/>
    </panel>

    <panel title="Expériences">
      <panel-related field="rolesc" colSpan="6">
        <field name="title"/>
      </panel-related>
      <panel-related field="competences" colSpan="6">
        <field name="title"/>
      </panel-related>
      <field name="experience" colSpan="3"/>
    </panel>

    <panel title="Secteurs d'Activité">
      <field name="open" colSpan="1" widget="boolean-switch"/>
      <panel-related field="businessSector" colSpan="5" showIf="!open" canEdit="false">
        <field name="title"/>
      </panel-related>
    </panel>

    <panel>
      <field name="localisation" colSpan="3"/>
      <field name="workawayMin" colSpan="2"/>
      <field name="workawayMax" colSpan="2"/>
      <field name="availabilityDate" colSpan="2" showIf="!availabilityWait"/>
      <field name="availabilityWait" colSpan="2" showIf="!availabilityDate"/>
    </panel>

    <panel>
      <panel-related field="offers" colSpan="5">
        <field name="title"/>
      </panel-related>
      <field name="typeContrat" colSpan="3"/>
      <field name="salary" colSpan="3"/>
    </panel>

    <panel>
      <field name="comments" colSpan="15"/>
    </panel>

    <panel>
      <field name="status" colSpan="3"/>
    </panel>

  </form>


</object-views>