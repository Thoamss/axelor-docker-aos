<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="opportunity-grid" title="Opportunités"
    model="com.axelor.ModuleRH.db.OpportunityPFE">
    <field name="client"/>
    <field name="title"/>
    <field name="prescriber"/>
    <field name="description"/>
    <field name="competences"/>
    <field name="xp"/>
    <field name="beginningDate"/>
    <field name="lengthInit"/>
    <field name="businessSectors.title"/>
    <field name="ADRmax"/>
  </grid>

  <form name="opportunity-form" title="Ajout Opportunité"
    model="com.axelor.ModuleRH.db.OpportunityPFE" width="large">

    <panel title="Informations Opportunité">
      <panel-related field="client" colSpan="4">
        <field name="name"/>
      </panel-related>
      <field name="title" colSpan="3"/>
      <field name="prescriber" colSpan="3"/>
      <field name="description" colSpan="15"/>
    </panel>

    <panel>
      <panel-related field="roles" colSpan="5">
        <field name="title"/>
      </panel-related>
      <panel-related field="competences" colSpan="5">
        <field name="title"/>
      </panel-related>
      <panel-related field="businessSectors" colSpan="5">
        <field name="title"/>
      </panel-related>
      <field name="xp" colSpan="3"/>
    </panel>

    <panel>
      <field name="localisation" colSpan="3"/>
      <field name="workawayMin" colSpan="3"/>
      <field name="workawayMax" colSpan="3"/>
      <field name="ADRmax" colSpan="3"/>
      <field name="beginningDate" colSpan="3"/>
      <field name="workingRate" colSpan="3"/>
      <field name="lengthInit" colSpan="3"/>
      <field name="lengthMax" colSpan="3"/>
    </panel>

    <panel>
      <field name="comments" colSpan="15"/>
    </panel>

  </form>

</object-views>